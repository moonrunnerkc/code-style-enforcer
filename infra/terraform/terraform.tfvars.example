aws_region   = "us-east-1"
environment  = "dev"
project_name = "code-style-enforcer"

# set to true for production VPC with private subnets
create_vpc = false

# REQUIRED: your OpenAI API key
openai_api_key = "sk-your-key-here"

# auth - comma separated keys, or "dev" to skip
valid_api_keys = "dev"

# rate limiting
rate_limit  = 10
rate_window = 60

# ECS sizing (dev defaults are small)
api_cpu           = 512
api_memory        = 1024
api_desired_count = 1

worker_cpu           = 256
worker_memory        = 512
worker_desired_count = 1

# Redis (t3.micro is free tier eligible)
redis_node_type = "cache.t3.micro"
redis_num_nodes = 1

# DynamoDB (PAY_PER_REQUEST is good for dev)
dynamodb_billing_mode = "PAY_PER_REQUEST"

# logs
log_retention_days = 7
