# Redis
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# OpenAI (required - get a key at https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4.1
LLM_TIMEOUT=30

# Local dev (fake AWS credentials for LocalStack)
DYNAMODB_ENDPOINT=http://localhost:8001
SQS_ENDPOINT=http://localhost:4566
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# API auth (comma-separated list of valid keys, "dev" works for local)
VALID_API_KEYS=dev

# Optional
MAX_CODE_BYTES=150000
